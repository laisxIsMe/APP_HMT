<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <cn.edu.scau.hometown.library.com.javis.abslidingpagerview.AbSlidingPlayView
        android:id="@+id/vp_ab_F"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="10dp"
        android:background="#00000000" />

    <cn.edu.scau.hometown.library.com.javis.mygridview.MyGridView
        android:id="@+id/gv_hmt_F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="5" />

    <ListView
        android:id="@+id/lv_hmt_F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>