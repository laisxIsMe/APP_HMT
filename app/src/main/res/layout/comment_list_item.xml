<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/comment_expand"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardBackgroundColor="@color/tab_grey"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_position"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="第i条评论"
                android:textColor="@android:color/white"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/comment_hide_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/tv_comment_class_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评人  :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点名情况:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平时作业:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="考试形式:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期末成绩:"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点评时间:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选修学期:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_class_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他说明:"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>